<h3><a class="btn btn-secondary" href="/moviebook"><i class="fa fa-plus"></i> Create New</a> Moviebook List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>URL Link</th>
            <th>Summary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.movieName}}</td>
            <td>{{this.urllink}}</td>
            <td>{{this.summ}}</td>
                <td>
                <a href="/moviebook/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/moviebook/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>